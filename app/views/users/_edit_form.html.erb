<div class='form'>
  <%= form_for @user, :url => user_path(@user), :multipart => true, :method => :put do |f| %>
    <div class="field">
      <label>Upload Profile Pic:</label>
      <%= f.file_field :avatar %>
    </div>
    <br />
    <div class="field">
      <label>User Name:</label>
      <%= f.text_field :username %>
    </div>
    <br />
    <div class='submit-div'>
      <%= f.submit 'Update', :class => 'submit-button' %>
    </div>
  <% end %>
</div>